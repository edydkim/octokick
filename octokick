use strict;
use warnings;

use Expect;
use Data::Dumper;
use Getopt::Long;
use Pod::Usage;
     
my $host = '';
my $hostFile = '';
my $cmd = '';
my $user = '';
my $pw = '';
my $debug = 0;

# set options
sub options() {
	my $help = 0;

	# Process options.
	if (@ARGV > 0) {
     	    Getopt::Long::Configure ("bundling_override");
	    GetOptions('h=s'	=> \$host,
		       'f=s'	=> \$hostFile,
		       'help|?'	=> \$help,
		       'c=s'	=> \$cmd,
		       'u=s' => \$user,
		       'p=s' => \$pw,
		       'debug'	=> \$debug)
	    or pod2usage(2);
	}

	pod2usage(1) and exit 0 if $help;
}

# call expect
sub expected() {
	my $h = shift;

	print "\n$h\n" if $debug;
	
	my $exp = new Expect;
	$exp->log_file("octokick.log");
	$exp->log_stdout(0);
	$exp->raw_pty(1);
	
	my $cli = "ssh $user\@$h -o StrictHostKeyChecking=no -q $cmd";
	
	$exp->spawn($cli) or die "Cannot spawn $cli: $!\n";
	
	$exp->expect(5,
	 [ qr /ssword:*/ => sub { my $exph = shift;
	                          $exph->send("$pw\n");
	                          exp_continue; }] );
	
	my $read = $exp->exp_before();
	chomp $read;
	print $read;
	print "\n\n";
	# if use Dumper
	# print Dumper($read);
	
	$exp->soft_close();	
}

# run to each files
sub run() {
	open my $fh, "<", "$hostFile" or die "Can't open $hostFile: $!";
	while(my $line = readline $fh){ 
		chomp $line;
		print "HOST : $line\n";
		&expected($line);
	}
	close $fh;
}

&options;

print "CMD : $cmd\n";

if ($hostFile) { &run; } else { &expected($host); }

1;
__END__
